<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_pressed="true"  >
        <shape>
            <solid
                android:color="#2cffffff"
            />
            <stroke
                android:width="1dp"
                android:color="#ffffff"/>
            <corners
                android:radius="25dp"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>


    </item>


    <item android:state_focused="true"  >
        <shape>
            <solid
                android:color="#27ffffff"
                />
            <stroke
                android:width="1dp"
                android:color="#ffffff"/>
            <corners
                android:radius="25dp"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>


    </item>

    <item >
        <shape>

            <stroke
                android:width="1dp"
                android:color="#ffffff"/>
            <corners
                android:radius="25dp"/>
             <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>


    </item>


</selector>